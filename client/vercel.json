{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "framework": "vite",
  "buildCommand": "cd .. && npm install && cd client && npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "x-vercel-toolbar-disabled", "value": "true" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}