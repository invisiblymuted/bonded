{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "framework": "vite",
  "buildCommand": "cd .. && npm install && cd client && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}